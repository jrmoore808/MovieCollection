@{
    ViewData["Title"] = "Recommend a Movie";
}

@model MovieCollection.Models.Movie
<!--Form for adding a movie record to the database-->

<div class="text-center">
    <h1 class="display-4">Submit a Movie Recommendation</h1>
    <form asp-action="MovieForm" method="post">
        <label asp-for="Category">Category: <input asp-for="Category" /></label><br />
        <label asp-for="Title">Title: <input asp-for="Title" /></label><br />
        <label asp-for="Year">Year: <input asp-for="Year" /></label><br />
        <label asp-for="Director">Director: <input asp-for="Director" /></label><br />
        <label>
            Rating:
            <select asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </label><br />
        <label asp-for="Edited">Edited: <input asp-for="Edited" /></label><br />
        <label asp-for="Lent">Lent to: <input asp-for="Lent" /></label><br />
        <label asp-for="Notes">Notes: <input asp-for="Notes" /></label><br />
        <div asp-validation-summary="All"></div>
        <button type="submit">Submit</button>
    </form>
</div>